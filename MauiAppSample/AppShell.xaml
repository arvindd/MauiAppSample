<?xml version="1.0" encoding="UTF-8" ?>
<rx:ReactiveShell
    x:Class="MauiAppSample.AppShell"
    x:TypeArguments="vm:AppShellViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rx="clr-namespace:ReactiveUI.Maui;assembly=ReactiveUI.Maui"
    xmlns:pages="clr-namespace:MauiAppSample.Pages"    
    xmlns:vm="clr-namespace:MauiAppSample.ViewModels"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
        Title="Location"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="pages:MainPage" />
        
        <ShellContent
        Title="Temperature"
        ContentTemplate="{DataTemplate pages:TemperaturePage}"
        Route="pages:TemperaturePage" />        
    </TabBar>

</rx:ReactiveShell>
